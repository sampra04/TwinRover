<?xml version="1.0"?>
<robot name="my_robot">

  <!-- ================= BASE ================= -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.0635"/>
      <geometry>
        <box size="0.305 0.305 0.254"/>
      </geometry>
      <material name="gray">
        <color rgba="0.7 0.7 0.7 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.0635"/>
      <geometry>
        <box size="0.305 0.305 0.254"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0.02 0 -0.01"/>
      <mass value="6.8"/>
      <inertia
        ixx="0.089" ixy="0.0" ixz="0.0"
        iyy="0.089" iyz="0.0"
        izz="0.105"/>
    </inertial>
  </link>

  <!-- ================= LEFT WHEEL ================= -->
  <link name="left_wheel">
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.06" length="0.032"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>

    <collision>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.06" length="0.032"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.194"/>
      <inertia
        ixx="0.00019" ixy="0.0" ixz="0.0"
        iyy="0.00019" iyz="0.0"
        izz="0.00035"/>
    </inertial>
  </link>


  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.1685 -0.06"/>
    <axis xyz="0 1 0"/>
  </joint>


  <!-- ================= RIGHT WHEEL ================= -->
  <link name="right_wheel">
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.06" length="0.032"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>

    <collision>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.06" length="0.032"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.194"/>
      <inertia
        ixx="0.00019" ixy="0.0" ixz="0.0"
        iyy="0.00019" iyz="0.0"
        izz="0.00035"/>
    </inertial>
  </link>


  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.1685 -0.06"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ================= REAR CASTER ================= -->
  <link name="rear_caster">
    <visual>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </visual>

    <collision>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.5"/>
      <inertia
        ixx="0.0002" ixy="0.0" ixz="0.0"
        iyy="0.0002" iyz="0.0"
        izz="0.0002"/>
    </inertial>
  </link>

  <joint name="rear_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rear_caster"/>
    <origin xyz="-0.12 0 -0.09"/>
  </joint>

  <!-- ================= FRONT CASTER ================= -->
  <link name="front_caster">
    <visual>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </visual>

    <collision>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.5"/>
      <inertia
        ixx="0.0002" ixy="0.0" ixz="0.0"
        iyy="0.0002" iyz="0.0"
        izz="0.0002"/>
    </inertial>
  </link>

  <joint name="front_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_caster"/>
    <origin xyz="0.12 0 -0.09"/>
  </joint>


  <!-- ================= LIDAR ================= -->
  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.05"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.2 0.8 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.05"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.1"/>
      <inertia
        ixx="0.0001" ixy="0.0" ixz="0.0"
        iyy="0.0001" iyz="0.0"
        izz="0.00005"/>
    </inertial>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.1905"/>
  </joint>

  <!-- ================= GAZEBO DIFF DRIVE ================= -->
  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.337</wheel_separation>
      <wheel_diameter>0.12</wheel_diameter>
      <cmd_vel_topic>cmd_vel</cmd_vel_topic>
      <odom_topic>odom</odom_topic>
      <robot_base_frame>base_link</robot_base_frame>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>false</publish_wheel_tf>
      <update_rate>50</update_rate>
      <max_wheel_torque>20</max_wheel_torque>
      <max_wheel_acceleration>1.0</max_wheel_acceleration>
      <command_timeout>0.5</command_timeout>
      <odometry_frame>odom</odometry_frame>
    </plugin>
  </gazebo>

  <!-- ================= GAZEBO PROPERTIES ================= -->
  <!-- Wheel friction -->
  <gazebo reference="left_wheel">
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>100000.0</kp>
    <kd>10.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="right_wheel">
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>100000.0</kp>
    <kd>10.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
    <material>Gazebo/Black</material>
  </gazebo>

  <!-- Base friction -->
  <gazebo reference="base_link">
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <material>Gazebo/Grey</material>
  </gazebo>

  <!-- Caster friction - low friction for smooth rolling -->
  <gazebo reference="rear_caster">
    <mu1>0.0</mu1>
    <mu2>0.0</mu2>
    <kp>100000.0</kp>
    <kd>1.0</kd>
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="front_caster">
    <mu1>0.0</mu1>
    <mu2>0.0</mu2>
    <kp>100000.0</kp>
    <kd>1.0</kd>
    <material>Gazebo/Grey</material>
  </gazebo>

<!-- ================= GAZEBO LIDAR ================= -->
<gazebo reference="lidar_link">
  <material>Gazebo/Blue</material>
  <sensor type="ray" name="lidar">
    <update_rate>15</update_rate>
    <ray>
      <scan>
        <horizontal>
          <samples>811</samples>
          <min_angle>-2.356</min_angle>
          <max_angle>2.356</max_angle>
        </horizontal>
      </scan>
      <range>
        <min>0.05</min>
        <max>10.0</max>
      </range>
    </ray>

    <plugin filename="libgazebo_ros_ray_sensor.so" name="gazebo_ros_ray_sensor">
      <ros>
        <remapping>~/out:=/scan</remapping>
      </ros>
      <frame_name>lidar_link</frame_name>
    </plugin>



  </sensor>
</gazebo>


</robot>